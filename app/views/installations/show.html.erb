
<h1 align="center" class="mb-0">Detalle de la
    <span class="text-primary">Instalacion</span>
</h1>
<div class="container">
	<table class="table table-striped table-hover medium">
		<tbody>
			<tr>
				<td>
					<medium><strong>Nombre</strong></medium>
				</td>
				<td>
					<medium><%=@installation.name%></medium>
				</td>
			</tr>
			<tr>
				<td>
					<medium><strong>Numero de Guardias</strong></medium>
				</td>
				<td>
					<medium><%=@installation.number_guards%></medium>
				</td>
			</tr>
			<tr>
				<td>
					<medium><strong>Guardia Adicionales</strong></medium>
				</td>
				<td>
					<medium><%=@installation.additional_guards%></medium>
				</td>
			</tr>
            <tr>
				<td>
					<medium><strong>Fecha de inicio</strong></medium>
				</td>
				<td>
					<medium><%=@installation.date%></medium>
				</td>
			</tr>

		</tbody>
	</table>
</div>

	<%= link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip">Agregar Contrato</span>'.html_safe, :controller => :contract_installations, :action => :new, :id => @installation.id%>
	<%= link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip">Ver Contratos</span>'.html_safe, :controller => :contract_installations, :action => :show, :id => @installation.id%>

	<%= link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip">Agregar Evento</span>'.html_safe, :controller => :events, :action => :new, :id => @installation.id%>
	<%= link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip">Ver Eventos</span>'.html_safe, :controller => :events, :action => :index, :id => @installation.id%>

<div align="center">
<table>
  <thead>
    <tr>
      <th scope="col"><a class="btn btn-secondary" href="/installations"><i class="fa fa-arrow-circle-left"></i> Volver       </a></th>
      <th scope="col">
				<%=link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip">Editar Instalacion</span>'.html_safe , edit_installation_path(@installation), class: "btn btn-success"%>
				</th>
			<th scope="col"><a class="btn btn-primary" href="/installations/new"><i class="fa fa-plus-square"></i> Crear nueva instalacion</a></th>
    </tr>
  </thead>
</table>
</div>