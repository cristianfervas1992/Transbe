<h1 align="center" class="mb-0">Lista de
    <span class="text-primary">Vacaciones</span>
</h1>





<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Nombre</th>
      <th scope="col">Dias tomados</th>
      <th scope="col">Accion</th>
    </tr>
  </thead>
 <tbody>
 <tr>
 
  <%@vacations2.each do |even|%>
    <th>
        <%=even.name%>
      
      </th>
      <th><%=even.days_taken%>
      
      </th>
      <td>
      <% if can? :show, even %>
           <%=link_to '<span class="fa fa-align-justify" data-original-title="Detalles" data-toggle="tooltip"></span>'.html_safe , vacation_path(even),class: "btn btn-info" %>
      <% end %>
      <% if can? :edit, even %>
          <%=link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip"></span>'.html_safe , edit_vacation_path(even), class: "btn btn-success"%>
      <% end %>
       
        
      </td>
    
  </tr>
  </tbody>
  <%end%>
</table>

<div align="center">
  <table>
    <thead>
      <tr>
        <th scope="col"><a class="btn btn-secondary" href="/guards"><i class="fa fa-home"></i> Volver al listado Guardias</a></th>
        <th>
        <%= link_to '<span class="fa fa-plus-square"  data-toggle="tooltip">Agregar Vacaciones</span>'.html_safe , class: "btn btn-primary", :controller => :vacations, :action => :new, :id => @guard.id ,class: "btn btn-primary" %>
        </th>
      </tr>
    </thead>
  </table>
</div>