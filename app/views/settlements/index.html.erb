
<h1 align="center" class="mb-0">Lista de
    <span class="text-primary">Finiquitos</span>
</h1>





<table class="table table-hover">
  <thead>
  <tr>
      <th scope="col">Nombre del Finiquto</th>
      <th scope="col">Fecha</th>
      <th scope="col">Accion</th>
    </tr>
  </thead>
 <tbody>
 <tr>
 
  <%@settlement2.each do |contr_inst|%>
    
      <th><%=contr_inst.name%>
      
      </th>
      <th>
      
      <%=contr_inst.date%>
      
      </th>
      <td>
      <% if can? :show, contr_inst %>
           <%=link_to '<span class="fa fa-align-justify" data-original-title="Detalles" data-toggle="tooltip"></span>'.html_safe , settlement_path(contr_inst),class: "btn btn-info" %>
      <% end %>
      <% if can? :edit, contr_inst %>
          <%=link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip"></span>'.html_safe , edit_settlement_path(contr_inst), class: "btn btn-success"%>
      <% end %>
       
        
      </td>
    
  </tr>
  </tbody>
  <%end%>
</table>

<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();   
});
</script>


<div align="center">
  <table>
    <thead>
      <tr>
        <th scope="col"><a class="btn btn-secondary" href="/guards"><i class="fa fa-home"></i> Volver al listado Guardias</a></th>
        <th>
        <%= link_to '<span class="fa fa-plus-square"  data-toggle="tooltip">Agregar Finiquito</span>'.html_safe , class: "btn btn-primary", :controller => :settlements, :action => :new, :id => @guard.id ,class: "btn btn-primary" %>
        </th>
      </tr>
    </thead>
  </table>
</div>