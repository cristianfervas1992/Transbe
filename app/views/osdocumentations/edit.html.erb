
<h1 align="center" class="col-md-10 col-center">Editar
    <span class="text-primary">Documento os10</span>
</h1>

<div class="col-md-10 col-center" align="left">

  <%= form_for @osdocumentation do |l| %>
  <div class="form-group" align="center">
    <!--FORMULARIO DEL TIPO BOOSTRAP QUE INCLUYE VALIDACIONES-->
    <div lang="es" class="col-md-12 col-center" align="left">
      <form>
          
          <div class="col-md-10 col-center">
            <label for="validationServer01" >Expira</label>
            <div class="input-group-prepend">
              <span class="icon-case"><i class="fa fa-calendar"></i></span>
              <%= l.date_field :expiration, type:"date",class:"form-control is-valid", placeholder:"07/07/2018", :required=> false %>
            </div>
          </div>
          <h1></h1>
           <div class="col-md-10 col-center">
            <%= l.label :state, "Estado(haz click si esta activo)" %>
            <%= l.check_box :state %>
          </div>
        </div>


      <h1></h1>
      <div class="form-row">
        <div class="col-md-8 mb-6">
          <div class="custom-file">
          
            <%= l.label :certificado_os10_doc,"Documento OS10(Formato PDF):" %>
            <%= l.file_field :certificado_os10_doc%> 
      </div>
      </div>
      </div>



        <h1>&nbsp</h1>
    <div align="center">
        
      <table>
        <thead>
          <tr>
            <th scope="col"><a class="btn btn-secondary" href="/guards"><i class="fa fa-arrow-circle-left"></i> Volver al listado de guardias</a></th>
            <th scope="col"><button  type="submit" class="btn btn-success" %="l.submit"%><i class="fa fa-plus-square"></i> Actualizar OS10</button></th>
          </tr>
        </thead>
      </table>
    </div>
      </form>
    </div>
  </div>
  <%end%>
</div>