
<h1 align="center" class="mb-0">Detalle del
    <span class="text-primary">evento</span>
</h1>
<div class="container">
	<table class="table table-striped table-hover medium">
		<tbody>
			<tr>
				<td>
					<medium><strong>Nombre Evento</strong></medium>
				</td>
				<td>
					<medium><%=@event.name%></medium>
				</td>
			</tr>
			<tr>
				<td>
					<medium><strong>Fecha de inicio</strong></medium>
				</td>
				<td>
					<medium><%=@event.date%></medium>
				</td>
			</tr>
			

		</tbody>
	</table>

<!--Aqui se mostrara la factura del evento-->
<div class="accordion" id="accord">
	<p>
		<a class="btn btn-primary" data-toggle="collapse" href="#factura" role="button" aria-expanded="false" aria-controls="factura">Factura Evento</a>
	</p>
    <div class="collapse multi-collapse" id="factura" data-parent="#accord">
      <div class="card card-body">
        <p align="center"> <%= image_tag @event.factura_evento_doc.url(:thumb) %></p>
      </div>
    </div>
    
		
</div>  



	<div align="center">
          <h1></h1>
		  <h1>&nbsp </h1>
        
          <table>
          <thead>
            <tr>
              <th scope="col"><a class="btn btn-primary" href="/installations"><i class="fa fa-arrow-circle-left"></i> Volver al listado instalaciones     </a></th>
              <th>
			  <%=link_to '<span class="fa fa-plus-square" data-original-title="Editar">Ir a Editar Evento</span>'.html_safe , edit_event_path(@event), class: "btn btn-success"%>
			  </th>
			  
            </tr>
          </thead>
        </table>
</div>
</div>

