
<h1 align="center" class="col-md-10 col-center">Editar
    <span class="text-primary">Evento</span>
</h1>

<div class="col-md-10 col-center" align="left">
  <%= form_for @event do |e| %>
  <div class="form-group" align="center">
    
    <div lang="es" class="col-md-12 col-center" align="left">
      <form>
 
        <div class="form-row">
          <div class="col-md-10 col-center">
            <label for="validationServer01" >Nombre del Evento</label>
            <div class="input-group-prepend">
              <span class="icon-case"><i class="fa fa-user"></i></span>
              <%= e.text_field :name, type:"text",class:"form-control is-valid", :required=> true %>
            </div>
          </div>
          
          <div class="col-md-10 col-center">
            <label for="validationServer01" >Fecha Inicio</label>
            <div class="input-group-prepend">
              <span class="icon-case"><i class="fa fa-user"></i></span>
              <%= e.date_field :date, type:"date",class:"form-control is-valid", :required=> true %>
            </div>
          </div>
        </div>
       
        <div align="center">
          <h1></h1>
          <table>
          <thead>
            <tr>
              <th scope="col"><a class="btn btn-primary" href="/events"><i class="fa fa-arrow-circle-left"></i> Volver       </a></th>
              <th scope="col"><button type="submit" class="btn btn-success" %="e.submit"% ><i class="fa fa-plus-square"></i> Actualizar Evento</button></th>
            </tr>
          </thead>
        </table>
        </div>
      </form>
    </div>
  </div>
  <%end%>
</div>