<h1 align="center" class="mb-0">Detalle del
    <span class="text-primary">Contrato</span>
</h1>
<div class="container">
	<table class="table table-striped table-hover medium">
		<tbody>
			<tr>
				<td>
					<medium><strong>Nombre Contrato</strong></medium>
				</td>
				<td>
					<medium><%=@contract_installation.name%></medium>
				</td>
			</tr>
			<tr>
				<td>
					<medium><strong>Fecha de inicio</strong></medium>
				</td>
				<td>
					<medium><%=@contract_installation.start_date%></medium>
				</td>
			</tr>
			<tr>
				<td>
					<medium><strong>Fecha de Termino</strong></medium>
				</td>
				<td>
					<medium><%=@contract_installation.finish_date%></medium>
				</td>
			</tr>

		</tbody>
	</table>

<!--Aqui se mostrara la factura del evento-->
<div class="accordion" id="accord">
	<p>
		<a class="btn btn-primary" data-toggle="collapse" href="#factura" role="button" aria-expanded="false" aria-controls="factura">Documento Contrato</a>
	</p>
    <div class="collapse multi-collapse" id="factura" data-parent="#accord">
      <div class="card card-body">
      <a href=<%= @contract_installation.contrato_de_instalacion_doc%>&embedded=true">Visualizar Contrato en PDF</a>
        <!--p align="center"> <%= image_tag @contract_installation.contrato_de_instalacion_doc.url(:thumb) %></p-->
      </div>
    </div>
    
		
</div>  

<%= link_to '<span class="fa fa-plus-square" data-original-title="Editar" data-toggle="tooltip">Agregar Factura</span>'.html_safe, :controller => :bills, :action => :new, :id => @contract_installation.id%>
	
	<%= link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip">Ver Factura</span>'.html_safe, :controller => :bills, :action => :index, :id => @contract_installation.id%>

	<div align="center">
          <h1></h1>
		  <h1>&nbsp </h1>
        
          <table>
          <thead>
            <tr>
              <th scope="col"><a class="btn btn-primary" href="/installations"><i class="fa fa-arrow-circle-left"></i> Volver al listado instalaciones     </a></th>
              <th>
			  <%=link_to '<span class="fa fa-plus-square" data-original-title="Editar">Ir a Editar Contrato</span>'.html_safe , edit_contract_installation_path(@contract_installation), class: "btn btn-success"%>
			  </th>
			  
            </tr>
          </thead>
        </table>
</div>
</div>

