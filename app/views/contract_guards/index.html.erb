<h1 align="center" class="mb-0">Lista de
    <span class="text-primary">Contrato o Anexo</span>
</h1>

<table class="table table-hover">
  <thead>
  <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Fecha Inicio</th>
      <th scope="col">Fecha Termino</th>
      <th scope="col">Accion</th>
    </tr>
  </thead>
 <tbody>
 <tr>
 
  <%@contract_guards2.each do |even|%>
    
      <th><%=even.name%>
      
      </th>
      <th><%=even.start_date%>
      
      </th>
      <th><%=even.finish_date%>
      
      </th>
      <td>
      <% if can? :show, even %>
           <%=link_to '<span class="fa fa-align-justify" data-original-title="Detalles" data-toggle="tooltip"></span>'.html_safe , contract_guard_path(even),class: "btn btn-info" %>
      <% end %>
      <% if can? :edit, even %>
          <%=link_to '<span class="fa fa-pencil" data-original-title="Editar" data-toggle="tooltip"></span>'.html_safe , edit_contract_guard_path(even), class: "btn btn-success"%>
      <% end %>
       
        
      </td>
    
  </tr>
  </tbody>
  <%end%>
</table>

<div align="center">
  <table>
    <thead>
      <tr>
        <th scope="col"><a class="btn btn-secondary" href="/"><i class="fa fa-home"></i> Volver al Inicio</a></th>
        <th>
        <%= link_to '<span class="fa fa-plus-square"  data-toggle="tooltip">Agregar Nuevo Contrato</span>'.html_safe , class: "btn btn-primary", :controller => :contract_guards, :action => :new, :id => @guard.id ,class: "btn btn-primary" %>
        </th>
        
      </tr>
    </thead>
  </table>
</div>