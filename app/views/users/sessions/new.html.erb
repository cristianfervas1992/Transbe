

<body1 class="text-center" align="center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
   <form class="form-signin">
   <h1 class="h3 mb-3 font-weight-normal" align="center"> Iniciar sesionsita</h1>
  <div class="text-center" align="center">
    <label for="inputEmail" class="sr-only">Email</label>
    <%= f.email_field :email,type: "email",class:"form-control",placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>


  <div class="text-center">
    <label for="inputPassword" class="sr-only">Password</label>
    
    <%= f.password_field :password,type:"password",class:"form-control",placeholder:"ContraseÃ±a", autocomplete: "off",:required=>true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,"Recordarme" %>
    </div>
  <% end -%>

  <div class="col-md-12 col-md-offset-3">

    <button  type="submit" class="btn btn-lg btn-primary btn-block" %="f.submit"%>Ingresar</button>
  </div>
<% end %>

<%= render "users/shared/links" %>

</form>
</body1>


