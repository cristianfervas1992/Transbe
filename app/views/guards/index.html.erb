      <th><%=t.firstname%>
        <%=t.lastname%>
      </th>
      <th><%=t.rut%></th>
      <td>
        

        <%=link_to '<span class="fa fa-align-justify"></span>'.html_safe , guard_path(t),class: "btn btn-info" %>

        <%=link_to '<span class="fa fa-pencil"></span>'.html_safe , edit_guard_path(t), class: "btn btn-primary"%>

        <%= link_to '<span class="fa fa-window-close"></span>'.html_safe , t, method: :delete, data: { confirm: "Â¿Esta seguro que desea eliminar el registro de este guardia?"} , class: "btn btn-danger"%>

